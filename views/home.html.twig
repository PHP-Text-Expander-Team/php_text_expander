<html>
  <head>
      <link href='css/bootstrap.min.css' rel='stylesheet' type='text/css'>
      <link href='css/bootstrap-theme.min.css' rel='stylesheet' type='text/css'>
      <link href='css/styles.css' rel='stylesheet' type='text/css'>
      <script src='js/jquery-3.1.0.js'></script>
      <script src='js/bootstrap.min.js' type='text/javascript'></script>
      <script src='js/scripts.js'></script>
    <title>Text Expander</title>
  </head>
  <body>

    <div class="container-fluid">
        <h1>Text Expander</h1>
        <h3>Text Input</h3>
            <form action="/new_snippet" method="post">
                <input type="text" name="text">
                <h3>Shortcut</h3>
                <input type="text" name="shortcut">
                <button class="btn" type="submit">Generate</button>
            </form>
<!-- SHORTCUTS -->
            {% if snippets is not empty %}
            <h3>Archived Shortcuts:</h3>
                {% for snippet in snippets %}
                <li><a href="/this_snippet/{{ snippet.getId }}">{{ snippet.getShortcut }}</a></li>
                {% endfor %}
            {% endif %}
<!-- RESULTS -->
    </div>
      <div class="container-fluid">
          <div class="row">
              <div class="col-md-6">
                  <h1>Text Expander</h1>
              </div>
          </div>
          <div class="row">
              <div class="col-md-4">
                  <h3>Text Input</h3>
                    <form action="/new_snippet" method="post">
                        <textarea cols="50" rows="5" id="txt1"></textarea>
                        <br>
                        <button type="button" value="@#$1$#@" class="placeholder">Variable 1</button>
                        <button type="button" value="@#$2$#@" class="placeholder">Variable 2</button>
              </div>
              <div class="col-md-4">
                  <h3>Shortcut</h3>
                       <input type="text" name="shortcut">
              </div>
          </div>
          <div class="row">
              <div class="col-md-6">
                        <button class="btn" type="submit">Generate</button>
                  </form>
              </div>
              <div class="row">
                  <div class="col-md-6">
                      {% if snippets is not empty %}
                        <h3>snippets:</h3>
                        {% for snippet in snippets %}
                        <li><a href="/new_snippet/{{ snippet.getId }}">{{ snippet.getShortcut }}</a></li>
                        {% endfor %}
                      {% endif %}
                  </div>
              </div>
          </div>
      </div>
  </body>
</html>
