<html>
  <head>
      <link href='css/bootstrap.min.css' rel='stylesheet' type='text/css'>
      <link href='css/bootstrap-theme.min.css' rel='stylesheet' type='text/css'>
      <link href='css/styles.css' rel='stylesheet' type='text/css'>
      <script src='js/jquery-3.1.0.js'></script>
      <script src='js/bootstrap.min.js' type='text/javascript'></script>
      <script src='js/scripts.js'></script>
    <title>Text Expander</title>
  </head>
  <body>
    <div class="container-fluid">
        <h1>Text Expander</h1>
        <h2>Update Snippet</h2>
        <div>
            <form action="/update_shortcut/{{ snippet.getId }}" method="post">
                <input type="hidden" name="_method" value="patch">
                <label for="shortcut update">Update:</label>
                <textarea cols="10" rows="1" id="txt1" name="text" required>{{ snippet.getShortcut }}</textarea>
                <button type="submit">Submit</button>
            </form>
        </div>
        <div>
            <form action="/update_text/{{ snippet.getId }}" method="post">
                <input type="hidden" name="_method" value="patch">
                <label for="text update">Update:</label>
                <textarea cols="100" rows="40" id="txt1" name="text" required>{{ snippet.getText }}</textarea>
                <button type="submit">Submit</button>
            </form>
        </div>
        <a href="/">Home</a>
    </div>
  </body>
</html>
