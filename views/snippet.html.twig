<html>
  <head>
      <link href='/css/bootstrap.min.css' rel='stylesheet' type='text/css'>
      <link href='/css/bootstrap-theme.min.css' rel='stylesheet' type='text/css'>
      <link href='/css/styles.css' rel='stylesheet' type='text/css'>
      <script src='/js/jquery-3.1.0.js'></script>
      <script src='/js/bootstrap.min.js' type='text/javascript'></script>
      <script src='/js/scripts.js'></script>
    <title>Text Expander</title>
  </head>
  <body>
    <div class="container-fluid">
        <h1>Text Expander</h1>

        <h2>{{ snippet.getShortcut }}</h2>

        <p>
            {{ snippet.getText }}
        </p>

        <div>
            <form action="/add_variables/{{ snippet.getId }}" method="post">

                {% if placeholders is not empty %}
                    {% for placeholder in placeholders %}
                    <label for="{{ placeholder }}">Variable {{ loop.index }}</label>
                    <input type="text" name="{{ placeholder }}" placeholder="{{ placeholder }}">
                    <br>
                    {% endfor %}
                {% endif %}
                <button type="submit">Submit</button>
            </form>
        </div>
<!-- RESULTS -->
    </div>
    <a href="/update/{{ snippet.getId }}">Update</a>
    <a href="/">Home</a>
  </body>
</html>
